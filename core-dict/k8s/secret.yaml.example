# Kubernetes Secret for Core DICT
# ⚠️ DO NOT COMMIT THIS FILE WITH REAL VALUES
# Use Vault, Sealed Secrets, or external secret management

apiVersion: v1
kind: Secret
metadata:
  name: core-dict-secrets
  namespace: dict-system
  labels:
    app: core-dict
    version: v1.0.0
type: Opaque
stringData:
  # Database Credentials
  DB_HOST: "postgres.production.internal"
  DB_USER: "core_dict_user"
  DB_PASSWORD: "CHANGE_ME_USE_VAULT"  # ⚠️ Replace with Vault reference

  # Redis Credentials
  REDIS_HOST: "redis.production.internal"
  REDIS_PASSWORD: "CHANGE_ME_USE_VAULT"  # ⚠️ Replace with Vault reference

  # Connect Service
  CONNECT_URL: "conn-dict.dict-system.svc.cluster.local:9092"

  # Pulsar
  PULSAR_URL: "pulsar://pulsar.dict-system.svc.cluster.local:6650"

  # JWT Secret
  JWT_SECRET_KEY: "CHANGE_ME_USE_VAULT"  # ⚠️ Replace with Vault reference

---

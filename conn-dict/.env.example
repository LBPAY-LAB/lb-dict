# Application Configuration
APP_ENV=development
APP_NAME=rsfn-connect
LOG_LEVEL=debug
LOG_FORMAT=json

# Server Ports
GRPC_PORT=9092
ADMIN_PORT=8081

# Temporal Configuration
TEMPORAL_HOST=localhost
TEMPORAL_PORT=7233
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=conn-dict-task-queue
MAX_CONCURRENT_ACTIVITIES=200
MAX_CONCURRENT_WORKFLOWS=100

# Apache Pulsar Configuration
PULSAR_URL=pulsar://localhost:6650
PULSAR_API_KEY=
PULSAR_TOPIC_REQ_IN=persistent://lb-conn/dict/rsfn-dict-req-out
PULSAR_TOPIC_RES_OUT=persistent://lb-conn/dict/rsfn-dict-res-out
PULSAR_SUBSCRIPTION=connect-consumer-sub
PULSAR_MAX_PENDING_MESSAGES=1000

# Redis Configuration (Cache)
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_PASSWORD=

# Bridge gRPC Client
BRIDGE_GRPC_ADDR=localhost:50051
BRIDGE_GRPC_TIMEOUT=30s
BRIDGE_GRPC_MAX_RETRIES=3

# PostgreSQL (opcional - para CID local)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rsfn_connect
POSTGRES_USER=connect
POSTGRES_PASSWORD=secure_password_here
POSTGRES_SSL_MODE=disable
POSTGRES_MAX_CONNECTIONS=25
POSTGRES_MAX_IDLE_CONNECTIONS=5

# OpenTelemetry (Observability)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=rsfn-connect
ENABLE_TRACING=true
ENABLE_METRICS=true

# Health Check
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PATH=/health
READINESS_CHECK_PATH=/ready
HEALTH_PORT=8081
METRICS_PORT=9093

# Workflow Configuration
CLAIM_WORKFLOW_TIMEOUT=720h  # 30 dias
VSYNC_CRON_SCHEDULE=0 0 * * *  # Diario as 00:00
OTP_TIMEOUT=5m
